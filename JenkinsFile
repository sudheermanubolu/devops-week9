pipeline {
    agent { label 'centos' }
    stages {
        stage ('Checkout') {
            steps {
                script {
                    git([url: 'https://github.com/sudheermanubolu/devops-week9.git', branch: 'main'])
                }
            }
        }
        stage('Deploy') {
            steps {
                sh 'curl -LO "https://dl.k8s.io/release/$(curl -L -s https://dl.k8s.io/release/stable.txt)/bin/linux/amd64/kubectl"'
                sh 'chmod +x kubectl' 
                sh "./kubectl apply -f deploy"
                sh "./kubectl get pods -n staging"
            }
        }
    }
}